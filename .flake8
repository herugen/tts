[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    .venv,
    build,
    dist,
    *.egg-info
per-file-ignores =
    app/models/__init__.py:F403,F401
    app/models/indextts2.py:E501
    app/models/oc8r.py:E501
    tests/unit/test_*.py:F401
    tests/integration/test_*.py:F401
    tests/scripts/run_tests.py:F841
